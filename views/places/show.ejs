<% layout('layouts/app') %>

<h1><%= place.title %></h1>
<h2><%= place.location %></h2>
<img src="<%= place.image %>" alt="">
<p><%= place.description %></p>
<!-- tambahkan method override ?_method=DELETE supaya bisa menghapus data -->
<!-- ingat dalam form hanya bisa menggunakan method POST or GET-->
<form
  action="/places/<%= place._id %>?_method=DELETE"
  method="POST"
  style="display: inline !important"
>
  <button type="submit">Delete</button>
</form>
<!-- Link to Edit -->
<!-- tambahkan place._id supaya bisa mendapatkan id yg dipilih -->
<a href="/places/<%= place._id %>/edit">Edit</a>
<a href="/places">All Places</a>
